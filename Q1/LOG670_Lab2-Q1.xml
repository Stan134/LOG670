}

id_vehicule tailB() {
     return listAttenteB[nbAttenteB - 1];
}

// Ajouter un véhicule de type B à la file d'attente
void enqueueB(id_vehicule id) {
    listAttenteB[nbAttenteB++] = id;
}

void dequeueB() {
    int i = 0;
    ++nbVehiculePasse;
    --nbAttenteB;

    while (i &lt; nbAttenteB) {
        listAttenteB[i] = listAttenteB[i + 1];
        ++i;
    }
    
    listAttenteB[i] = 0;
}

